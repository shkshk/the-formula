.the_formula-patterns
  display: table-cell
  padding: 2em 1em
  text-align: center
  font-family: $certege
  font-style: italic

.the_formula-felt, .the_formula-leather
  display: inline-block
  text-align: center
  outline: 2px dashed $body-color

.the_formula-felt
  position: relative

  &:before
    position: absolute
    top: -28px
    left: 0
    right: 0
    display: block
    content: attr(data-width)
    text-align: center

  &:after
    position: absolute
    top: 30%
    right: 100%
    display: block
    margin-right: 12px
    content: attr(data-height)

.the_formula-leather
  position: absolute

  &:before
    position: absolute
    top: -28px
    left: 0
    right: 0
    display: block
    content: attr(data-width)
    text-align: center

  &:after
    position: absolute
    top: 40%
    left: 0
    display: block
    margin-left: 6px
    content: attr(data-height)
